<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/assist_bar_bg">

    <RadioGroup
        android:id="@+id/radio_group"
        style="@style/button_padding_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_bj"
            style="@style/popup_window_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/city_bj" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_1px"
            android:background="@color/divider_color" />

        <RadioButton
            android:id="@+id/rb_sh"
            style="@style/popup_window_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/city_sh" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_1px"
            android:background="@color/divider_color" />

        <RadioButton
            android:id="@+id/rb_sz"
            style="@style/popup_window_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/city_sz" />
    </RadioGroup>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_1px"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/radio_group" />

    <TextView
        android:id="@+id/tv_btn_reset"
        style="@style/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_button"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toStartOf="@+id/btn_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <View
        android:id="@+id/btn_divider"
        android:layout_width="@dimen/divider_height_1px"
        android:layout_height="0dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="@id/tv_btn_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_btn_reset" />

    <TextView
        android:id="@+id/tv_btn_confirm"
        style="@style/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/confirm_button"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/tv_btn_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_divider"
        app:layout_constraintTop_toTopOf="@id/tv_btn_reset" />
</androidx.constraintlayout.widget.ConstraintLayout>
