<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoListChoiceIndicatorSingle" parent="AppTheme">
        <item name="android:listChoiceIndicatorSingle">@null</item>
        <item name="listChoiceIndicatorSingleAnimated">@null</item>
    </style>


    <!-- fragment -->
    <style name="fragment_root_view" parent="button_padding_horizontal">
        <item name="android:background">@android:color/white</item>
    </style>


    <!-- toolbar -->
    <style name="normal_toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/toolbar_title</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textColor">@color/toolbar_title_text_color</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- text -->
    <style name="text_appearance">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="common_text" parent="text_padding">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="text" parent="common_text">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="secondary_text" parent="common_text">
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="popup_window_item" parent="popup_window_item_padding_vertical">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/ctx_default_color</item>
        <item name="android:gravity">start</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>


    <!-- button -->
    <style name="ctx_filter" parent="ctx_filter_drawable">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/ctx_default_color</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
    </style>

    <style name="button" parent="button_padding_vertical">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="single_button" parent="single_button_bg">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- label -->
    <style name="label" parent="label_bg">
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <!-- TabLayout -->
    <style name="tab_layout_sort">
        <item name="tabMinWidth">0dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@null</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabPaddingStart">@dimen/text_padding_horizontal</item>
        <item name="tabPaddingEnd">@dimen/text_padding_horizontal</item>
        <item name="tabTextAppearance">@style/tab_text_appearance</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="tab_text_appearance">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
</resources>
